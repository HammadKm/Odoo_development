<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">
            res.config.settings.view.form.inherit.pos
        </field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id"
               ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//setting[@id='pos-loyalty']" position="before">>
                    <setting id="pos_session_discount_limit"
                             string="Session Discount limit"
                             help="User can set discount limit for each session">
                        <field name="pos_session_discount_limit"/>
                        <div class="content-group"
                             invisible="not pos_session_discount_limit">
                            <div class="mt16">
                                <label for="pos_discount_limit"/>
                                <field name="pos_discount_limit"/>
                            </div>
                        </div>
                    </setting>
            </xpath>
        </field>
    </record>
</odoo>
