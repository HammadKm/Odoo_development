<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.module.category" id="module_recurring_subscription">
        <field name="name">Recurring subscription</field>
        <field name="description">User access for recurring subscription</field>
        <field name="sequence">10</field>
    </record>

    <record id="recurring_subscription_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_recurring_subscription"/>
    </record>

    <record id="recurring_subscription_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_recurring_subscription"/>
    </record>

    <record id="recurring_subscription_company_rule" model="ir.rule">
        <field name="name">Recurring Subscription Multi-Company</field>
        <field name="model_id" ref="model_recurring_subscription"/>
        <field name="domain_force">[('company_id', 'in', company_ids + [False])]</field>
    </record>
</odoo>