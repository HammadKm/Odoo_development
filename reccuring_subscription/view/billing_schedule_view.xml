<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="action_billing_schedule" model="ir.actions.act_window">
        <field name="name">Billing Schedule</field>
        <field name="res_model">billing.schedule</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="billing_schedule_tree" model="ir.ui.view">
        <field name="name">billing.schedule.view</field>
        <field name="model">billing.schedule</field>
        <field name="arch" type="xml">
            <tree string="billing_schedule_tree">
                <field name="name"/>
                <field name="period"/>
            </tree>
        </field>
    </record>

    <record id="billing_schedule_form" model="ir.ui.view">
        <field name="name">billing.schedule.form</field>
        <field name="model">billing.schedule</field>
        <field name="arch" type="xml">
            <form string="billing_schedule_form">
                <header>
                    <button name="invoice_btn"
                            string="Create invoice" class="oe_highlight" type="object" />
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="recurring_subscription_ids"
                                   widget="many2many_tags"/>
                            <field name="period"/>
                            <field name="total_credit_amount"/>
                        </group>
                        <group>
                            <field name="restrict_customer_ids"
                                   widget="many2many_tags"/>
                            <field name="simulation"/>
                            <field name="due_date"/>
                            <field name="active" invisible="1"/>
                        </group>
                        <notebook>
                            <page string="Credits">
                                <field name="credits_ids"  force_save="1"/>
                                <group class="oe_subtotal_footer" colspan="2" name="total">
                                    <field name="total_credit_amount" colspan="2" readonly="1"/>
                                </group>
                            </page>
                        </notebook>
                    </group>
                    <div name="button_box">
                        <button class="oe_stat_button" type="object"
                                name="subscription" icon="fa-list">
                            <field string="subscriptions"
                                   name="subscription_count"
                                   widget="statinfo"/>
                        </button>
                    </div>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
