<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="1">
        <record id="ir_cron_recurring_subscription_action" model="ir.cron">
            <field name="name">Recurring subscription invoices</field>
            <field name="model_id" ref="model_billing_schedule"/>
            <field name="state">code</field>
            <field name="code">model.action_subscription()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="nextcall" eval="(DateTime.now()+timedelta(days=1)).strftime('%Y-%m-%d 12:00:00')"/>
        </record>
    </data>
</odoo>