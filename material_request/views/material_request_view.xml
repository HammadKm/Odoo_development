<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="action_material_request" model="ir.actions.act_window">
        <field name="name">Material Request</field>
        <field name="res_model">material.request</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{"search_default_user_request":1}</field>
    </record>

    <record id="material_request_info_tree" model="ir.ui.view">
        <field name="name">material.request.info</field>
        <field name="model">material.request</field>
        <field name="arch" type="xml">
            <tree string="material_request_tree"
                  decoration-success="state == 'fully approved'"
                  decoration-muted="state == 'rejected'"
                  decoration-info="state == 'submitted'"
                  decoration-primary="state == 'first approved'"
                  default_order="create_date DESC">
                <field name="employee_id"/>
                <field name="date"/>
                <field name="company_id"/>
                <field name="user_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="material_request_info_form" model="ir.ui.view">
        <field name="name">material.request.info.form</field>
        <field name="model">material.request</field>
        <field name="arch" type="xml">
            <form string="material_request_form">
                <header>
                    <button name="submit_button" string="Submit to Manager"
                            class="oe_highlight" type="object"
                            invisible="(state != 'draft')"
                            groups="material_request.material_request_user"/>
                    <button name="manager_approve_button"
                            string="Manager Approval"
                            class="oe_highlight" type="object"
                            invisible="(state != 'submitted')"
                            groups="material_request.material_request_manager"/>
                    <button name="head_approve_button"
                            string="REQ Head Approval"
                            class="oe_highlight" type="object"
                            invisible="(state != 'first approved')"
                            groups="material_request.material_request_head"/>
                    <button name="reject_button" string="Reject"
                            class="oe_highlight"
                            type="object"
                            invisible="(state != 'first approved')"
                            groups="material_request.material_request_head"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,submitted,first approved,fully approved,rejected"
                           options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <header>
                        <h1>
                            <field name="reference_no"/>
                        </h1>
                    </header>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="date"/>
                        </group>
                        <group>
                            <field name="company_id"/>
                            <!--                            <field name="user_id"/>-->
                        </group>
                        <notebook>
                            <page string="Materials">
                                <field name="material_order_ids">
                                    <tree string="Material Order Line"
                                          editable="bottom">
                                        <field name="product_id"/>
                                        <field name="material_qty"/>
                                        <field name="operation_type"/>
                                        <field name="src_location_id"
                                               readonly="operation_type == 'purchase order'"
                                               required="operation_type == 'internal transfer'"/>
                                        <field name="dest_location_id"
                                               readonly="operation_type == 'purchase order'"
                                               required="operation_type == 'internal transfer'"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </group>
                    <div name="button_box">
                        <button class="oe_stat_button" type="object"
                                name="action_purchase_order" icon="fa-list" invisible="(state != 'fully approved' or purchase_count==0)">
                            <field string="Purchase orders"
                                   name="purchase_count"
                                   widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" type="object"
                                name="action_internal_transfer" icon="fa-list" invisible="(state != 'fully approved' or transfer_count==0)">
                            <field string="Internal Transfer"
                                   name="transfer_count"
                                   widget="statinfo"/>
                        </button>
                    </div>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="material_request_search" model="ir.ui.view">
        <field name="name">material.request.search</field>
        <field name="model">material.request</field>
        <field name="arch" type="xml">
            <search string="material_request_search">
                <!--                <field name="product_id"/>-->
                <filter name="user_request" string="My request"
                        domain="[('user_id','=',uid)]"/>
                <filter name="reject_request" string="Rejected request"
                        domain="[('state','=','rejected')]"/>
                <group string="Group By">
                    <filter name="state" string="Status"
                            context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_material_request_submitted"
            model="ir.actions.act_window">
        <field name="name">Request to Manager</field>
        <field name="res_model">material.request</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('state','=','submitted')]</field>
    </record>

    <record id="action_material_request_approved" model="ir.actions.act_window">
        <field name="name">Request to Head</field>
        <field name="res_model">material.request</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('state','=','first approved')]</field>
    </record>

</odoo>