<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="import_order_line_wizard_view_form" model="ir.ui.view">
        <field name="name">import.order.line.wizard.form</field>
        <field name="model">import.order.line</field>
        <field name="arch" type="xml">
            <form string="Import sale order">
                <group>
                    <field name="file_name"/>
                </group>
                <footer>
                    <button name="action_import_order" string="Import"
                            type="object"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="import_order_line_wizard_action" model="ir.actions.act_window">
        <field name="name">Import Sale order</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">import.order.line</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="import_order_line_wizard_view_form"/>
        <field name="target">new</field>
    </record>
</odoo>

