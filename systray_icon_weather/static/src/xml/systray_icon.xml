<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
 <t t-name="systray_icon" owl="1">
     <Dropdown>
         <t t-set-slot="toggler">
             <t t-if="state.weather">
         <div class="new_icon">
              <div class="icon_div">
                  <div class="toggle-icon" role="button">
                      <t t-log="state.weather"/>
                      <i id='create_order' t-on-click="_onClick"
                         class="fa fa-cloud fa-1.5x"
                         style="color: white; margin-bottom:10px;"
                         role="img" aria-label="weather notification"/>
                  </div>
              </div>
          </div>
             </t>
         </t>
         <t>
         <div class="padding"
              style="overflow:hidden;width:285px;height:165px;">
                 <div class="card">
                     <h3 class="card-title m-b-0 dl"><span t-esc="state.weather_data['name']"/></h3>
                     <small class="card-text font-light"><span t-esc="state.weather_data['main']"/></small>
                 </div>
             <div class="card-body weather-small">
                    <div class="row">
                        <div class="col-8 b-r align-self-center">
                            <div class="d-flex">
                                <div class="display-6 text-info">
                                    <i class="mdi mdi-weather-pouring"/>
                                </div>
                                <div class="m-l-20">
                                    <h1 class="font-light text-info m-b-0"
                                        t-if="state.weather_data['temp']"><span t-esc="state.weather_data['temp']"/>
                                        <sup>0</sup>C</h1>
                                    <small><span t-esc="state.weather_data['desc']"/></small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
         </div>
         </t>
     </Dropdown>
 </t>
</templates>